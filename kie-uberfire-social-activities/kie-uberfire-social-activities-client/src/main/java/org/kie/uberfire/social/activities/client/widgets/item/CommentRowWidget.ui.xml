<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:b="urn:import:com.github.gwtbootstrap.client.ui"
    >
  <ui:style>
    .right {
      text-align: right
    }

    .center {
      text-align: center
    }

    .left {
      text-align: left
    }

    .comment {
      margin-left: 50px;
    }
  </ui:style>
  <b:FluidRow addStyleNames="{style.comment}">
    <b:Column size="1" ui:field="thumbnail" addStyleNames="{style.center}"/>
    <b:Column size="9" ui:field="addInfo" addStyleNames="{style.left}"/>
  </b:FluidRow>
</ui:UiBinder>